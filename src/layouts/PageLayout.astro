---
import DocsMenu from '../components/DocsMenu.astro';
import BaseLayout from './BaseLayout.astro';
const { pageTitle } = Astro.props;
---

<BaseLayout pageTitle={pageTitle}>
  <div class="wrapper | region | layout">
    <aside class="sidebar">
      <nav class="sticky">
        <DocsMenu />
      </nav>
    </aside>
    <article class="flow | content | page">
      <h1>{pageTitle}</h1>
      <slot />
    </article>
  </div>
</BaseLayout>
